<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sitatveggen</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Sitatveggen</h1>

    <div class="container">
        <!-- Left Column: Form for Adding Quotes -->
        <div class="left-column">
            <h2>Legg inn et sistat</h2>
            <form action="/add-quote" method="POST">
                <input type="text" name="text" placeholder="Sitat" required>
                <input type="text" name="author" placeholder="Sitat av (Valgfritt)">
                <button type="submit">Legg inn sistat</button>
            </form>
        </div>

        <!-- Right Column: Display Quotes with Filter Options -->
        <div class="right-column">
            <h2>Sitater</h2>
            <!-- Filter Buttons -->
            <div class="filter-buttons">
                <button id="filter-newest" class="active">Nyeste</button>
                <button id="filter-top-voted">Mest stemt pÃ¥</button>
            </div>

            <!-- Quote List -->
            <ul id="quote-list"></ul>
        </div>
    </div>

    <script src="/script.js"></script>
</body>
</html>
